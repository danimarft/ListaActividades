<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alumnot.listaactividades.HechosCuriosos1"
    android:background="#ffffdd2d">

    <TextView
        android:text="¿Sabías qué?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:background="#0bffffff"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textColor="#fff0481f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Las hormigas se estiran cuando se despiertan por la mañana"
        android:id="@+id/HechoCuriosoTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:background="@android:color/transparent"
        android:textColor="#fff03918" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver otro hecho curioso"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
